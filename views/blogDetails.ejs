<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= blog.title %>
    </title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Include the navbar -->
    <%- include('partials/navbar') %>

        <div class="container mt-5">
            <div class="row">
                <!-- Blog Details Section -->
                <div class="col-md-8">
                    <div class="card mb-4">
                        <% if (blog.image) { %>
                            <img src="/uploads/<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>">
                            <% } %>
                                <div class="card-body">
                                    <h2 class="card-title">
                                        <%= blog.title %>
                                    </h2>
                                    <p class="card-text text-muted">
                                        <small>By <%= blog.createdBy.username %> on <%=
                                                    blog.createdAt.toLocaleDateString() %></small>
                                    <div>
                                        <i class="fas fa-heart me-2" style="color: red;" id="likeIcon"
                                            data-id="<%= blog._id %>"></i>

                                        <!-- Like count -->
                                        <span id="likeCount">
                                            <%= blog.likeCount || 0 %>
                                        </span> Likes
                                    </div>

                                    </p>
                                    <p>
                                        <%= blog.description %>
                                    </p>

                                    <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
                                </div>
                    </div>
                </div>

                <!-- Sidebar with Other Blogs -->
                <div class="col-md-4">
                    <h4>Other Posts</h4>
                    <div class="list-group">
                        <% otherBlogs.forEach(otherBlog=> { %>
                            <a href="/blogs/<%= otherBlog._id %>"
                                class="list-group-item list-group-item-action d-flex align-items-center">
                                <!-- Small thumbnail image for the blog post -->
                                <% if (otherBlog.image) { %>
                                    <img src="/uploads/<%= otherBlog.image %>" alt="<%= otherBlog.title %> Thumbnail"
                                        class="img-thumbnail me-3" style="width: 200px; height: 150px;">
                                    <% } else { %>
                                        <img src="/images/default-thumbnail.jpg" alt="Default Thumbnail"
                                            class="img-thumbnail me-3" style="width: 60px; height: 60px;">
                                        <% } %>
                                            <div>
                                                <h6 class="mb-0">
                                                    <%= otherBlog.title %>
                                                </h6>
                                                <small class="text-dark ">By <%= otherBlog.createdBy.username %>
                                                </small>
                                            </div>
                            </a>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <script>
            document.getElementById("likeIcon").addEventListener("click", async function () {
                const blogId = this.getAttribute("data-id");

                try {
                    // Send like/unlike request to the server
                    const response = await fetch(`/blogs/${blogId}/like`, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Update UI based on the server response
                        document.getElementById("likeCount").innerText = data.likeCount;

                        // Toggle the heart color based on like/unlike
                        if (this.classList.contains("liked")) {
                            this.classList.remove("liked");
                        } else {
                            this.classList.add("liked");
                        }
                    } else {
                        alert(data.message || "Failed to update like status");
                    }
                } catch (error) {
                    console.error("Error:", error);
                    alert("Something went wrong. Please try again.");
                }
            });

        </script>

        <!-- Bootstrap JS and Popper.js CDN -->
        <%- include('partials/scriptjs') %>
</body>

</html>